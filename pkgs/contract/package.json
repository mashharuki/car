  "scripts": {
    "format": "npx solhint --fix --noPrompt 'contracts/**/*.sol'",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "verify": "npx hardhat ignition verify",
    "coverage": "SOLIDITY_COVERAGE=true npx hardhat coverage",
    "deploy:LicensePlate": "npx hardhat ignition deploy ./ignition/modules/LicensePlateAccountFactory.ts",
    "deploy:LicensePlate:baseSepolia": "npx hardhat ignition deploy ./ignition/modules/LicensePlateAccountFactory.ts --network base-sepolia --verify",
    "local": "npx hardhat node",
    "getBalance": "npx hardhat getBalance",
    "getChainInfo": "npx hardhat getChainInfo"
  },
